<UserControl x:Class="PedidoApp.Views.ProdutosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="850">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- FILTRO -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">

            <TextBlock Text="Nome:" VerticalAlignment="Center"/>
            <TextBox Width="150"
                     Margin="5,0"
                     Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Código:" VerticalAlignment="Center"/>
            <TextBox Width="100"
                     Margin="5,0"
                     Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Valor Min:" VerticalAlignment="Center"/>
            <TextBox Width="80"
                     Margin="5,0"
                     Text="{Binding ValorMin}"/>

            <TextBlock Text="Valor Max:" VerticalAlignment="Center"/>
            <TextBox Width="80"
                     Margin="5,0"
                     Text="{Binding ValorMax}"/>

            <Button Content="Buscar"
                    Width="90"
                    Margin="10,0"
                    Command="{Binding BuscarCommand}"/>
        </StackPanel>

        <!-- LISTA -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ProdutosFiltrados}"
                  SelectedItem="{Binding ProdutoSelecionado}"
                  AutoGenerateColumns="False"
                  Height="300">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="120"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="120"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- BOTÕES -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <Button Content="Incluir"
                    Width="100"
                    Margin="5"
                    Command="{Binding IncluirCommand}"/>

            <Button Content="Editar"
                    Width="100"
                    Margin="5"
                    Command="{Binding EditarCommand}"/>

            <Button Content="Excluir"
                    Width="100"
                    Margin="5"
                    Command="{Binding ExcluirCommand}"/>

        </StackPanel>

    </Grid>
</UserControl>
