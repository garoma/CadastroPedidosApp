<UserControl x:Class="PedidoApp.Views.PedidosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="850">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- LISTA DE PEDIDOS -->
        <DataGrid ItemsSource="{Binding Pedidos}"
                  SelectedItem="{Binding PedidoSelecionado}"
                  AutoGenerateColumns="False"
                  Height="300">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.Nome}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridCheckBoxColumn Header="Finalizado" Binding="{Binding Finalizado}" Width="100"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- ALTERAR STATUS -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <Button Content="Pago"
                    Width="100"
                    Margin="5"
                    Command="{Binding StatusPagoCommand}"/>

            <Button Content="Enviado"
                    Width="100"
                    Margin="5"
                    Command="{Binding StatusEnviadoCommand}"/>

            <Button Content="Recebido"
                    Width="100"
                    Margin="5"
                    Command="{Binding StatusRecebidoCommand}"/>

        </StackPanel>

    </Grid>
</UserControl>
